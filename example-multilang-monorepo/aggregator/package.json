{
  "name": "aggregator",
  "version": "0.0.1",
  "private": true,
  "description": "Aggregator (BFF) of example monorepo appliaction",
  "license": "UNLICENSED",
  "author": "nazna <naznagg@gmail.com> (https://nazna.dev)",
  "scripts": {
    "dev": "nest start --watch --path ./tsconfig.json",
    "build": "nest build --path ./tsconfig.json",
    "start": "nest start --path ./tsconfig.json",
    "lint": "npm run typecheck && npm run eslint && npm run prettier",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint --ignore-path .gitignore --fix .",
    "prettier": "prettier --ignore-path .gitignore --write ."
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@nestjs/common": "8.4.3",
    "@nestjs/core": "8.4.3",
    "@nestjs/graphql": "10.0.8",
    "@nestjs/platform-fastify": "8.4.3",
    "apollo-server-fastify": "3.6.7",
    "fastify-csrf": "3.1.0",
    "fastify-helmet": "7.0.1",
    "graphql": "16.3.0",
    "graphql-scalars": "1.17.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "8.2.4",
    "@types/node": "17.0.23",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "prettier": "2.6.2",
    "typescript": "4.6.3"
  },
  "engines": {
    "node": "17.x",
    "npm": "8.x"
  }
}
