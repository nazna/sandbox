{
  "name": "backends-for-frontends",
  "description": "Backends for Frontends with Nest.js",
  "version": "1.0.0",
  "author": "nazna <naoya3e@gmail.com>",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/nazna/example-webdev-stack/packages/backends-for-frontends",
  "scripts": {
    "dev": "npm run generate-typings && nest start --watch",
    "start": "node dist/main",
    "build": "nest build",
    "prebuild": "rimraf dist && npm run generate-typings",
    "test": "jest",
    "coverage": "jest --coverage",
    "generate-typings": "ts-node src/generate-typings.ts && prettier --write src/graphql.schema.ts",
    "lint": "npm run typecheck && npm run format",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@nestjs/common": "^7.4.4",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.4",
    "@nestjs/graphql": "^7.6.0",
    "@nestjs/platform-express": "^7.4.4",
    "apollo-server-express": "^2.17.0",
    "axios": "^0.20.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "dataloader": "^2.0.0",
    "graphql": "^15.3.0",
    "graphql-depth-limit": "^1.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.2",
    "@nestjs/testing": "^7.4.4",
    "@types/express": "^4.17.8",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/jest": "26.0.14",
    "@types/node": "^14.11.1",
    "@types/supertest": "^2.0.10",
    "jest": "26.4.2",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "26.4.0",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  }
}
